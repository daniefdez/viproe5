# 🔐 CONFIGURACIÓN DE PRODUCCIÓN ROCK AND ROLL

# Puerto del servidor
PORT=3001

# Entorno (development, production)
NODE_ENV=production

# 🔑 JWT Secret (GENERAR UNO ÚNICO)
JWT_SECRET=tu_jwt_secret_super_seguro_aqui_cambiar_en_produccion

# 🤖 Google Gemini API
GEMINI_API_KEY=tu_gemini_api_key_aqui

# 🗄️ Base de Datos PostgreSQL
DATABASE_URL=postgresql://usuario:password@localhost:5432/visionai_pro

# 📊 Redis para Cache y Rate Limiting
REDIS_URL=redis://localhost:6379

# 🌐 CORS Origins (separados por coma)
CORS_ORIGINS=https://visionai-pro.com,https://www.visionai-pro.com

# 📧 Email Configuration (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASS=tu_app_password

# 📊 Monitoring (opcional)
SENTRY_DSN=tu_sentry_dsn_aqui

# 🔐 Encryption Key para datos sensibles
ENCRYPTION_KEY=tu_encryption_key_32_caracteres_aqui

# 📁 File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES_PER_USER_PER_DAY=50

# ⏱️ Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
API_RATE_LIMIT_MAX=20